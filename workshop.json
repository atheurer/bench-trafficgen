{
  "workshop": {
    "schema": {
      "version": "2020.03.02"
    }
  },
  "userenvs": [
    {
      "name": "centos8",
      "requirements": [
        "dependencies",
        "trex1",
        "trex2"
      ]
    }
  ],
  "requirements": [
    {
      "name": "dependencies",
      "type": "distro",
      "distro_info": {
        "packages": [
          "rdma-core-devel",
          "dpdk-tools",
          "net-tools",
          "which",
          "python3-pyyaml"
        ]
      }
    },
    {
      "name": "trex1",
      "type": "files",
      "files_info": {
        "files": [
          {
            "src": "%bench-dir%/trafficgen/install-trex.sh",
            "dst": "/usr/local/bin"
          }
        ]
      }
    },
    {
      "name": "trex2",
      "type": "manual",
      "manual_info": {
        "commands": [
          "/usr/local/bin/install-trex.sh --insecure"
        ]
      }
    }
  ]
}
