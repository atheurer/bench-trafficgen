{
    "workshop": {
	"schema": {
	    "version": "2020.03.02"
	}
    },
    "userenvs": [
	{
	    "name": "centos8",
	    "requirements": [
		"dependencies",
		"trafficgen",
		"trex"
	    ]
	}
    ],
    "requirements": [
	{
	    "name": "dependencies",
	    "type": "distro",
	    "distro_info": {
		"packages": [
		    "git",
		    "dpdk-tools",
		    "python3"
		]
	    }
	},
	{
	    "name": "trafficgen",
	    "type": "manual",
	    "manual_info": {
		"commands": [
		    "git clone https://github.com/atheurer/trafficgen.git /opt/trafficgen"
		]
	    }
	},
	{
	    "name": "trex",
	    "type": "manual",
	    "manual_info": {
		"commands": [
		    "/opt/trafficgen/install-trex.sh --insecure"
		]
	    }
	}
    ]
}
